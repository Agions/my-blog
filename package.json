{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "pub": "git add . && git-cz  && release-it ",
    "commit": " git-cz ",
    "release": "release-it",
    "lint": "eslint --ext \".ts,.js,.vue\" --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@element-plus/nuxt": "^1.0.7",
    "@pinia/nuxt": "^0.5.1",
    "nuxt": "^3.10.0",
    "release-it": "^17.0.3",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": false,
        "multiple": false
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "",
      "autoFix": false
    }
  },
  "dependencies": {
    "@release-it/conventional-changelog": "^8.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "sass": "^1.70.0",
    "validate-commit-msg": "^2.14.0"
  },
  "version": "1.0.2"
}
